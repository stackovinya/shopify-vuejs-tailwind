<div 
   class="
      col-span-12 md:col-span-4 flex flex-col gap-3 rounded-3xl bg-secondary p-5 
      hover:border hover:border-primary
      cursor-pointer
   "
   onclick="location.href = '{{ href }}';"
>
   <div class="flex items-center">
      <span class="{{ tag_class }} px-2 py-1 bg-green-300 text-black text-xs rounded-full mr-1">{{ tag }}</span>
   </div>
   <h2 class="text-2xl font-semibold">{{ name }}</h2>
   <p class="text-sm text-gray-500">{{ description }}</p>
   <div class="flex items-center flex-wrap text-primary fill-primary">
      <a class="flex items-center text-md" href="{{ href }}">
         View More<span class="w-4 ml-1">{% render 'icons', icon: 'arrow-north-east' %}</span></a>
   </div>
</div>