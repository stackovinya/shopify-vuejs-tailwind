
<div class="flex items-center bg-gray-100">
    <div class="container grid grid-cols-12 gap-3 items-center px-6 py-10">
        <div class="col-span-12 sm:col-span-6 flex flex-col justify-center gap-3">
            <h6 class="text-md md:text-xl text-secondary uppercase font-bold">Blog</h6>
            <h1 class="text-3xl md:text-5xl text-primary font-bold uppercase">{{ blog.title }}</h1>
        </div> 
    </div>
</div>


<div class="container grid grid-cols-12 gap-3 px-6 py-10">
    {% for article in blog.articles %}
    <a class="col-span-12 sm:col-span-4 flex flex-col justify-center gap-3" href="{{ article.url }}">
        <div class="">
            <img class="h-[250px] w-full rounded-lg" src="{{ article.image | collection_img_url: 'large' }}" />
        </div>
        <h4 class="text-md md:text-xl text-secondary uppercase font-bold">{{ article.title }}</h4>
        <p class="">{{ article.excerpt | truncate: 150 }}</p>
    </a> 
    {% endfor %}
</div>