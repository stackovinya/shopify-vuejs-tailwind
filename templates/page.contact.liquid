<div class="bg-gray-100 px-0 md:px-6 py-6">
    <div class="container grid grid-cols-12">

        <div class="col-span-12 md:col-span-6 flex flex-col gap-3 px-6 py-10">
            <h6 class="text-md md:text-lg text-primary uppercase font-bold">Let's Connect</h6>
            <h1 class="text-2xl md:text-4xl text-black font-bold uppercase">
                Talk to our expert
            </h1>
            <p class="text-md md:text-lg">Fill your contact details here and we will get in touch with you soon.</p>
        </div>

        <div class="col-span-12 md:col-span-6 flex flex-col px-0 md:px-3 py-4">
            {% form 'contact', id: 'ContactForm', class: 'grid grid-cols-12 bg-white px-4 py-6 rounded-3xl' %}
            {%- if form.posted_successfully? -%}
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <div class="w-full px-5 py-4 bg-green-400 text-white rounded-lg">
                    <h6>Your request is successfully recieved. We will contact you on your phone or email as soon as
                        possible.</h6>
                </div>
            </div><!-- flex ends -->
            {%- elsif form.errors -%}
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <div class="w-full px-5 py-4 bg-red-400 text-white rounded-lg">
                    <h6>Please clear errors before submitting request.</h6>
                </div>
            </div><!-- flex ends -->
            {%- endif -%}


            <!--------------- FIELD -------------------->
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <label class="block text-sm ml-2 mb-1">Name</label>
                <div class="flex relative overflow-hidden">
                    <input type="text" required class=" 
                                flex w-full bg-white
                                border border-black focus:border-2 focus:border-primary rounded-lg
                                text-black text-sm px-3 py-3 appearance-none outline-none
                            " name="contact[name]"
                        value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                        placeholder="ex. Davis" />
                </div>
            </div><!-- input wrapper ends -->
            <!--------------- FIELD | ENDS -------------------->

            <!--------------- FIELD -------------------->
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <label class="block text-sm ml-2 mb-1">Email</label>
                <div class="flex relative overflow-hidden">
                    <input type="email" required class=" 
                                flex w-full bg-white
                                border border-black focus:border-2 focus:border-primary rounded-lg
                                text-black text-sm px-3 py-3 appearance-none outline-none
                            " name="contact[email]"
                        value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                        placeholder="ex. Davis" />
                </div>
                {%- if form.errors contains 'email' -%}
                <div class="flex mb-1 px-2 py-1">
                    <small class="text-xs text-red-400">Email {{ form.errors.messages.email -}}</small>
                </div>
                {%- endif -%}
            </div><!-- input wrapper ends -->
            <!--------------- FIELD | ENDS -------------------->

            <!--------------- FIELD -------------------->
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <label class="block text-sm ml-2 mb-1">Phone</label>
                <div class="flex relative overflow-hidden">
                    <input type="phone" required class=" 
                                flex w-full bg-white
                                border border-black focus:border-2 focus:border-primary rounded-lg
                                text-black text-sm px-3 py-3 appearance-none outline-none
                            " name="contact[mobile]" value="{% if form.mobile %}{{ form.mobile }}{% endif %}"
                        placeholder="ex. Davis" />
                </div>
            </div><!-- input wrapper ends -->
            <!--------------- FIELD | ENDS -------------------->

            <!--------------- FIELD -------------------->
            <div class="col-span-12 flex flex-col my-2 mx-3">
                <label class="block text-sm ml-2 mb-1">Message</label>
                <div class="flex relative overflow-hidden">
                    <textarea rows="10" id="ContactForm-body" class="
                                flex w-full bg-white
                                border border-black focus:border-2 focus:border-primary rounded-lg
                                text-black text-sm px-3 py-3 appearance-none outline-none
                            " name="contact[body]" placeholder="e.x Hello, I need help with order">
                        {{- form.body -}}
                        </textarea>
                </div>
            </div><!-- input wrapper ends -->
            <!--------------- FIELD | ENDS -------------------->

            <!--------------- SUBMIT -------------------->
            <div class="col-span-12 my-2 mx-3">
                <button class="flex items-center py-3 px-6 bg-primary rounded-lg font-bold text-white">SUBMIT</button>
            </div><!-- input wrapper ends -->
            <!--------------- SUBMIT | ENDS -------------------->
            {% endform %}
        </div>
    </div><!---- container ends ------->
</div>