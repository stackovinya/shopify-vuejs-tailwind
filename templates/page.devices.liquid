
<div class="bg-primary text-white">
    <div class="container grid grid-cols-12 px-6 py-10">
        <div class="col-span-12 flex flex-col items-center">
            <h1 class="text-2xl md:text-3xl font-bold text-center">Supported Devices</h1>
        </div>
    </div>
</div>






<div v-cloak id="__devicesAPP">
    <div class="container grid grid-cols-12 gap-3 px-6 py-10">
        
        <div 
            class="col-span-6 md:col-span-3 flex flex-col bg-gray-100 rounded-md px-3 py-4"
            v-for="deviceItem in devices"
        >
            <h4 class="text-xl md:text-2xl font-bold mb-3">[[ deviceItem.name ]]</h4>
            
            <div class="flex flex-col text-sm">
                <p class="font-bold text-sm">Products Available: 
                    <span class="mx-1 font-normal" v-for="productsItem in deviceItem.products_available">[[ productsItem ]],</span>
                </p>
            </div>
        </div>
        
    </div>
</div><!----- v-cloak ends ------->



<script>
const DEVICES = [];

{% for deviceItem in shop.metaobjects.devices.values %}
DEVICES.push({
    name: `{{ deviceItem.name.value }}`, products_available: {{ deviceItem.products_available }},
    brand: `{{ deviceItem.brand.value }}`, series: `{{ deviceItem.series_name.value }}`
});
{% endfor %}

//console.log(DEVICES)
</script>



<script>
//create app 
const VUEAPP_devicesPage = Vue.createApp({
    delimiters: ['[[', ']]'],//custom delimeter to avoid conflict with liquid
    data(){
        return{
            devices: DEVICES
        }
    },
    created(){
        
        
    },//created ends
});

VUEAPP_devicesPage.mount('#__devicesAPP')
</script>