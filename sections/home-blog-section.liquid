




<div class="container grid grid-cols-12 gap-6 md:gap-3 items-center px-6 md:px-1 py-3 md:py-1 mb-6">
    <div class="col-span-12 flex justify-center mb-6 md:mb-10 mt-3 md:mt-6">
        <h6 class="text-3xl md:text-4xl text-primary uppercase font-bold">Latest Blogs</h6>
    </div>

    {% for blockItem in section.blocks %}
        {% assign article = blockItem.settings.article %}
        <a class="col-span-12 sm:col-span-4 flex flex-col justify-center gap-3" href="{{ article.url }}">
            <div class="">
                <img class="h-[250px] w-full rounded-lg" src="{{ article.image | collection_img_url: 'large' }}" />
            </div>
            <h4 class="text-md md:text-xl text-secondary uppercase font-bold">{{ article.title }}</h4>
            <p class="">{{ article.excerpt | truncate: 150 }}</p>
        </a> 
    {% endfor %}
</div>








{% schema %} 
{
    "name": "Home Blogs",
    "tag": "section",
    "limit": 1,
    "settings": [],
    "max_blocks": 4,
    "blocks": [
        {
            "name": "Single Article",
            "type": "article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Article"
                }
            ]
        }
    ]
}
{% endschema %}